{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./public",
    "rootDir": "./app",
    "allowJs": false,
    "jsx": "react",
    "allowUmdGlobalAccess": true,
  },
  "exclude": [
    "node_modules",
    "public",
    "dist",
  ]
}